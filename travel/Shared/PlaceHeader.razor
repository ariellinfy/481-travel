<div class="page-header">
    <div class="btn-container">
        <button class="btn btn-round btn-back"><i class="bi bi-chevron-left"></i></button>
    </div>
    <h4>@pageTitle</h4>
    <div class="btn-container">
        <button class="btn btn-round btn-event" type="button" @onclick="addPlan"><i class="bi bi-plus-lg"></i></button>
        <button class="btn btn-round btn-event" type="button" @onclick="bookmark"><i class="bi @bookmarkIcon"></i></button>
    </div>
</div>

@code {
    [Parameter]
    public string pageTitle { get; set; }

    public bool bookmarked = false; // depending on user
    private string bookmarkIcon = "bi-bookmark";

    private void bookmark()
    {
        bookmarked = !bookmarked;
        if (bookmarked) bookmarkIcon = "bi-bookmark-fill";
        else bookmarkIcon = "bi-bookmark";
    }

    private void addPlan()
    {
        // need to implement
    }
}